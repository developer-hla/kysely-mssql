{
  "name": "@hunter-ashmore/kysely-mssql",
  "version": "0.1.0",
  "description": "Opinionated Kysely wrapper for MS SQL Server with observability, error handling, and utilities",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "prepublishOnly": "pnpm build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "keywords": [
    "kysely",
    "mssql",
    "tedious",
    "sql-server",
    "database",
    "observability",
    "typescript"
  ],
  "author": "Hunter Ashmore",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/developer-hla/kysely-mssql.git"
  },
  "bugs": {
    "url": "https://github.com/developer-hla/kysely-mssql/issues"
  },
  "homepage": "https://github.com/developer-hla/kysely-mssql#readme",
  "peerDependencies": {
    "kysely": "^0.27.0",
    "tedious": "^18.0.0",
    "tarn": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "kysely": "^0.27.5",
    "tedious": "^18.6.1",
    "tarn": "^3.0.2",
    "typescript": "^5.7.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  }
}
